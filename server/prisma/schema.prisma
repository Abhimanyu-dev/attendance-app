generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url = "postgresql://me:ps1@localhost:5432/api?schema=public"
}

model Location {
  id           String      @id @default(cuid())
  locationName String
  xCoordinate  Float
  yCoordinate  Float
  Event        Event?
  Attendance   Attendance?
}

model Attendance {
  id         String   @id @default(cuid())
  location   Location @relation(fields: [locationId], references: [id])
  locationId String   @unique
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  time       DateTime
}

// show in the profile section
model Profile {
  id        String @id @default(cuid())
  employeId String @unique
  name      String
  position  String
  password  String
  user      User?
}

model User {
  id         String       @id @default(cuid())
  Profile    Profile      @relation(fields: [profileId], references: [id])
  profileId  String       @unique
  role       Role         @default(USER)
  Attendance Attendance[]
  Event      Event[]
}

model Event {
  id               String    @id @default(cuid()) // cuid is a unique id generator
  title            String
  description      String?
  date             DateTime
  location         Location? @relation(fields: [locationId], references: [id])
  locationId       String    @unique
  assignedOfficers User[]
}

enum Role {
  ADMIN // 2
  USER // 3
  OBSERVER // 1
}
